{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "lernaHelperOptions": {
    "deployFileMap": [
      {
        "basePath": "packages/axes/dist",
        "dists": [
          "packages/demo/dist"
        ]
      }
    ],
    "beforeReleaseScripts": [
      "npm run packages:build",
      "npm run demo:build",
      "npm run demo:deploy"
    ]
  }
}
